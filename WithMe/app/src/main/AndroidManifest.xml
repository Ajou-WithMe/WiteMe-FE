<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.withme">
    <!-- 인터넷 사용 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".GlobalApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WithMe"
        android:usesCleartextTraffic="true">
        <activity android:name=".GroupActivity4"></activity>
        <activity android:name=".GroupActivity3" />
        <activity android:name=".GroupActivity2" />
        <activity android:name=".GroupActivity1" />
        <activity android:name=".WebViewActivity" />

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="187008367a75439b524def92790c6d59" />

        <activity android:name=".SignUpActivity4_2" />
        <activity android:name=".SignUpActivity4_1" />
        <activity android:name=".SignUpActivity3" />
        <activity android:name=".SignUpActivity2" />
        <activity android:name=".SignUpActivity1" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".DescriptionActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>