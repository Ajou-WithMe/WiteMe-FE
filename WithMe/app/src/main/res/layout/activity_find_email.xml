<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.FindEmailActivity">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="498px"
        android:layout_height="75px"
        android:layout_marginStart="60px"
        android:layout_marginTop="321px"
        android:text="아이디(이메일) 찾기"
        android:textColor="#222222"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="912px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginTop="24px"
        android:text="회원가입 시 입력했던 이름과 연락처를 기입해주세요!"
        android:textColor="#595956"
        android:textSize="41px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="84px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginTop="204px"
        android:text="성함"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="117px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginTop="117px"
        android:text="연락처"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <LinearLayout
        android:id="@+id/nameLayout"
        android:layout_width="744px"
        android:layout_height="123px"
        android:layout_marginTop="642px"
        android:layout_marginEnd="60px"
        android:background="@drawable/edittext_rounded_corner_sign4_not_selected"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etName"
            android:layout_width="600px"
            android:layout_height="123px"
            android:background="@android:color/transparent"
            android:hint="성함을 입력해주세요"
            android:paddingLeft="33px"
            android:textColorHint="#BDBDBD"
            android:textSize="42px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45px"
            android:src="@drawable/check"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phoneNumberLayout"
        android:layout_width="744px"
        android:layout_height="123px"
        android:layout_marginTop="48px"
        android:layout_marginEnd="60px"
        android:background="@drawable/edittext_rounded_corner_sign4_not_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameLayout">

        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="600px"
            android:layout_height="123px"
            android:background="@android:color/transparent"
            android:hint="- 없이 입력"
            android:paddingLeft="33px"
            android:textColorHint="#BDBDBD"
            android:textSize="42px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45px"
            android:src="@drawable/check"
            android:visibility="invisible" />


    </LinearLayout>

    <Button
        android:id="@+id/enterComplete"
        android:layout_width="960px"
        android:layout_height="141px"
        android:layout_marginBottom="72px"
        android:background="@drawable/radius_1_clickable"
        android:text="입력 완료"
        android:textColor="#222222"
        android:textSize="42px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>