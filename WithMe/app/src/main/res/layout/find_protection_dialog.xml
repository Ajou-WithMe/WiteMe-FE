<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="960px"
    android:layout_height="528px"
    android:layout_gravity="center"
    android:background="@drawable/radius_5">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="708px"
        android:layout_height="60px"
        android:layout_marginStart="66px"
        android:layout_marginTop="90px"
        android:text="정말 다행입니다!"
        android:textColor="#222222"
        android:textSize="47px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="657px"
        android:layout_height="108px"
        android:layout_marginStart="66px"
        android:layout_marginTop="30px"
        android:text="글은 본인만 확인 가능하고 게시판에서 사라집니다."
        android:textColor="#222222"
        android:textSize="41px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/understand"
        android:layout_width="798px"
        android:layout_height="141px"
        android:layout_marginTop="45px"
        android:background="@drawable/radius_5_button"
        android:text="예"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />




</androidx.constraintlayout.widget.ConstraintLayout>