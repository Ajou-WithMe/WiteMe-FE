<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="960px"
    android:layout_height="708px"
    android:layout_gravity="center"
    android:background="@drawable/invite_protector">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="612px"
        android:layout_height="60px"
        android:layout_marginStart="75px"
        android:layout_marginTop="114px"
        android:text="함께할 보호자를 초대해보세요!"
        android:textColor="#222222"
        android:textSize="48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="498px"
        android:layout_height="54px"
        android:layout_marginStart="75px"
        android:layout_marginTop="21px"
        android:text="초대 코드를 바로 보내드려요"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/understand"
        android:layout_width="813px"
        android:layout_height="141px"
        android:layout_marginTop="87px"
        android:background="@drawable/radius_5_button"
        android:text="카카오톡으로 초대하기"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:layout_width="813px"
        android:layout_height="141px"
        android:layout_marginTop="24px"
        android:background="@drawable/radius_5_button_no"
        android:text="문자로 초대하기"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/understand" />



</androidx.constraintlayout.widget.ConstraintLayout>