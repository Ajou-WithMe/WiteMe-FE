<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="960px"
    android:layout_height="528px"
    android:layout_gravity="center"
    android:background="@drawable/radius_5">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="753px"
        android:layout_height="60px"
        android:layout_marginStart="66px"
        android:layout_marginTop="108px"
        android:text="피보호자의 계정을 삭제하시겠습니까?"
        android:textColor="#222222"
        android:textSize="48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="813px"
        android:layout_height="54px"
        android:layout_marginStart="66px"
        android:layout_marginTop="36px"
        android:text='삭제 시 해당 계정의 모든 데이터도 삭제됩니다.'
        android:textColor="#222222"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/yes"
        android:layout_width="402px"
        android:layout_height="141px"
        android:layout_marginTop="90px"
        android:layout_marginEnd="66px"
        android:background="@drawable/radius_5_button"
        android:text="예"
        android:textColor="#222222"
        android:textSize="42px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <Button
        android:id="@+id/no"
        android:layout_width="402px"
        android:layout_height="141px"
        android:layout_marginStart="66px"
        android:layout_marginTop="90px"
        android:background="@drawable/radius_5_button_no"
        android:text="아니오"
        android:textColor="#222222"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />




</androidx.constraintlayout.widget.ConstraintLayout>