<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="960px"
    android:layout_height="528px"
    android:layout_gravity="center"
    android:background="@drawable/invite_protector">

    <TextView
        android:id="@+id/textView13"
        android:layout_width="502px"
        android:layout_height="54px"
        android:layout_marginStart="66px"
        android:layout_marginTop="141px"
        android:text="코드가 복사되었습니다."
        android:textColor="#333333"
        android:textSize="48px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/close"
        android:layout_width="813px"
        android:layout_height="141px"
        android:layout_marginTop="132px"
        android:background="@drawable/radius_5_button"
        android:text="닫기"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />
</androidx.constraintlayout.widget.ConstraintLayout>