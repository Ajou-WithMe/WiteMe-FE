<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity3">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="204px"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/just_bottom_line">

        <TextView
            android:layout_width="423px"
            android:layout_height="69px"
            android:layout_marginTop="111px"
            android:text="피보호자 계정 생성"
            android:textColor="#000000"
            android:textSize="53px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="240px"
        android:layout_height="258px"
        android:layout_marginTop="144px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileImage"
            android:layout_width="300px"
            android:layout_height="300px"
            android:src="@drawable/solo_profile" />

        <ImageView
            android:id="@+id/editProfile"
            android:layout_width="96px"
            android:layout_height="96px"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/edit_profile" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/nameLayout"
        android:layout_width="744px"
        android:layout_height="123px"
        android:layout_marginStart="279px"
        android:layout_marginTop="120px"
        android:background="@drawable/edittext_rounded_corner_sign4_not_selected"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

        <EditText
            android:id="@+id/etName"
            android:layout_width="600px"
            android:layout_height="123px"
            android:background="@android:color/transparent"
            android:hint="피보호자의 이름을 입력하세요"
            android:paddingLeft="33px"
            android:textColorHint="#BDBDBD"
            android:textSize="42px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/checkbox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45px"
            android:src="@drawable/check"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/IDLayout"
        android:layout_width="744px"
        android:layout_height="123px"
        android:layout_marginStart="279px"
        android:layout_marginTop="36px"
        android:background="@drawable/edittext_rounded_corner_sign4_not_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameLayout">

        <EditText
            android:id="@+id/etID"
            android:layout_width="600px"
            android:layout_height="123px"
            android:background="@android:color/transparent"
            android:hint="아이디를 입력하세요"
            android:paddingLeft="33px"
            android:textColorHint="#BDBDBD"
            android:textSize="42px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/checkbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45px"
            android:src="@drawable/check"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwordLayout"
        android:layout_width="744px"
        android:layout_height="123px"
        android:layout_marginStart="279px"
        android:layout_marginTop="36px"
        android:background="@drawable/edittext_rounded_corner_sign4_not_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/IDLayout">

<!--        <EditText-->
<!--            android:id="@+id/etPassword"-->
<!--            android:layout_width="600px"-->
<!--            android:layout_height="123px"-->
<!--            android:background="@android:color/transparent"-->
<!--            android:hint="숫자 여섯자리 입력"-->
<!--            android:paddingLeft="33px"-->
<!--            android:inputType="numberPassword"-->
<!--            android:textColorHint="#BDBDBD"-->
<!--            android:textSize="42px"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toBottomOf="parent" />-->
        
        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="600px"
            android:layout_height="123px"
            android:text="숫자 여섯자리 입력"
            android:textColor="#BDBDBD"
            android:textSize="42px"
            android:gravity="center_vertical"
            android:paddingLeft="33px"/>
            

        <ImageView
            android:id="@+id/checkbox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45px"
            android:src="@drawable/check"
            android:visibility="invisible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/addressLayout"
        android:layout_width="744px"
        android:layout_height="wrap_content"
        android:layout_marginStart="279px"
        android:layout_marginLeft="279px"
        android:layout_marginTop="36px"
        android:background="@drawable/edittext_rounded_corner_sign4_not_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/passwordLayout">
        
        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="600px"
            android:layout_height="wrap_content"
            android:text="거주지 검색하기"
            android:textColor="#BDBDBD"
            android:textSize="42px"
            android:paddingLeft="33px"
            android:maxLines="3"/>

<!--        <EditText-->
<!--            android:id="@+id/etAddress"-->
<!--            android:layout_width="600px"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="거주지 검색하기"-->
<!--            android:textColorHint="#BDBDBD"-->
<!--            android:textSize="42px"-->
<!--            android:maxLines="3"-->
<!--            android:gravity="top"-->
<!--            android:paddingLeft="33px"-->
<!--            android:paddingBottom="33px"-->
<!--            android:paddingTop="36px"-->
<!--            android:paddingRight="33px"-->
<!--            android:background="@android:color/transparent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent" />-->

        <ImageView
            android:id="@+id/checkbox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45px"
            android:src="@drawable/check"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detailAddressLayout"
        android:layout_width="744px"
        android:layout_height="123px"
        android:layout_marginStart="279px"
        android:layout_marginLeft="279px"
        android:layout_marginTop="24px"
        android:background="@drawable/edittext_rounded_corner_sign4_not_selected"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressLayout">

        <EditText
            android:id="@+id/etDetailAddress"
            android:layout_width="600px"
            android:layout_height="123px"
            android:background="@android:color/transparent"
            android:gravity="top"
            android:hint="상세주소 입력"
            android:paddingLeft="33px"
            android:paddingTop="36px"
            android:paddingRight="33px"
            android:textColorHint="#BDBDBD"
            android:textSize="42px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/checkbox5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="45px"
            android:src="@drawable/check"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="78px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="763.5px"
        android:text="성함"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="117px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="105px"
        android:text="아이디"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="156px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="105px"
        android:text="비밀번호"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView7" />

    <TextView
        android:layout_width="117px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginLeft="60px"
        android:layout_marginTop="105px"
        android:text="거주지"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView8" />

    <TextView
        android:layout_width="591px"
        android:layout_height="39px"
        android:layout_marginTop="46.5px"
        android:layout_marginEnd="180px"
        android:layout_marginRight="180px"
        android:text="보호자의 실제 거주지를 정확하게 입력해주세요!"
        android:textColor="#FF302B"
        android:textSize="29px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailAddressLayout" />

    <Button
        android:id="@+id/startWithMe"
        android:layout_width="960px"
        android:layout_height="141px"
        android:layout_marginBottom="72px"
        android:background="@drawable/radius_1_nonclickable"
        android:clickable="false"
        android:text="다음"
        android:textColor="#BDBDBD"
        android:textSize="42px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>