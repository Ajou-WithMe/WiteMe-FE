<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="960px"
    android:layout_height="855px"
    android:layout_gravity="center"
    android:background="@drawable/alert_white_border">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="216px"
        android:layout_height="216px"
        android:layout_marginTop="87px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/groupName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileImage" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="567px"
        android:layout_height="54px"
        android:layout_marginTop="477px"
        android:text="보호자로 참여하시겠습니까?"
        android:textColor="#222222"
        android:textSize="48px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yes"
        android:layout_width="402px"
        android:layout_height="141px"
        android:layout_marginTop="111px"
        android:layout_marginEnd="66px"
        android:background="@drawable/radius_5_button"
        android:text="예"
        android:textColor="#222222"
        android:textSize="42px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/no"
        android:layout_width="402px"
        android:layout_height="141px"
        android:layout_marginStart="66px"
        android:layout_marginTop="111px"
        android:background="@drawable/radius_5_button_no"
        android:text="아니오"
        android:textColor="#222222"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />




</androidx.constraintlayout.widget.ConstraintLayout>