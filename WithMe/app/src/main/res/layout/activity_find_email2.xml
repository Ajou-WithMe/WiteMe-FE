<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.FindEmailActivity2">

    <TextView
        android:id="@+id/textView15"
        android:layout_width="498px"
        android:layout_height="75px"
        android:layout_marginStart="60px"
        android:layout_marginTop="321px"
        android:text="아이디(이메일) 찾기"
        android:textColor="#222222"
        android:textSize="60px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="912px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginTop="24px"
        android:text="입력하신 회원 정보로 저장된 아이디 입니다."
        android:textColor="#595956"
        android:textSize="41px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="912px"
        android:layout_height="54px"
        android:layout_marginStart="60px"
        android:layout_marginTop="10px"
        android:text="해당 아이디로 로그인해주세요!"
        android:textColor="#595956"
        android:textSize="42px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <LinearLayout
        android:id="@+id/emails"
        android:layout_width="960px"
        android:layout_height="wrap_content"
        android:layout_marginTop="72px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView28"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/goToLogin"
        android:layout_width="462px"
        android:layout_height="141px"
        android:layout_marginStart="60px"
        android:layout_marginBottom="72px"
        android:background="@drawable/radius_1_clickable"
        android:text="로그인"
        android:textColor="#222222"
        android:textSize="42px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:layout_width="462px"
        android:layout_height="141px"
        android:layout_marginEnd="60px"
        android:layout_marginBottom="72px"
        android:background="@drawable/radius_1_nonclickable"
        android:text="비밀번호 찾기"
        android:textColor="#222222"
        android:textSize="42px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>