<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".user.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="213px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/with_me_logo_yellow" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="417px"
        android:layout_height="69px"
        android:layout_marginTop="390px"
        android:text="With Me 시작하기"
        android:textColor="#333333"
        android:textSize="54px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="960px"
        android:layout_height="447px"
        android:layout_marginTop="588px"
        android:background="@drawable/radius_1_login"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/etID"
            android:inputType="textNoSuggestions"
            android:layout_width="960px"
            android:layout_height="60px"
            android:background="#00000000"
            android:hint="아이디(이메일)"
            android:paddingLeft="45px"
            android:textSize="42px"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="874.5px"
            android:layout_height="1.8px"
            android:layout_marginTop="141px"
            android:background="#E9E9E9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="960px"
            android:layout_height="60px"
            android:background="#00000000"
            android:hint="******"
            android:inputType="numberPassword"
            android:paddingLeft="45px"
            android:textSize="42px"
            app:layout_constraintBottom_toTopOf="@+id/buttonLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="906px"
            android:layout_height="141px"
            android:layout_marginBottom="24px"
            android:clickable="false"
            android:background="@drawable/radius_1_nonclickable"
            android:text="로그인하기"
            android:textColor="#BDBDBD"
            android:textSize="42px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/kakaoLogin_login"
        android:layout_width="906px"
        android:layout_height="141px"
        android:layout_marginTop="48px"
        android:layout_marginBottom="627px"
        android:background="@drawable/radius_2"
        android:backgroundTint="#FEE500"
        android:drawableLeft="@drawable/kakao"
        android:paddingLeft="63px"
        android:text="카카오로 시작하기"
        android:textColor="#000000"
        android:textSize="42px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <com.kakao.usermgmt.LoginButton
        android:id="@+id/btn_kakao_login_basic_login"
        android:layout_width="906px"
        android:layout_height="141px"
        android:layout_marginBottom="696px"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/findEmail"
        android:layout_width="300px"
        android:layout_height="45px"
        android:layout_marginStart="141px"
        android:layout_marginLeft="141px"
        android:layout_marginTop="57px"
        android:text="아이다(이메일)찾기"
        android:textSize="36px"
        android:textColor="#A6A29D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kakaoLogin_login" />

    <View
        android:layout_width="1.8px"
        android:layout_height="48px"
        android:layout_marginTop="57px"
        android:background="#BDBDBD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kakaoLogin_login" />

    <TextView
        android:id="@+id/findPassword"
        android:layout_width="207px"
        android:layout_height="45px"
        android:layout_marginTop="57px"
        android:layout_marginEnd="195px"
        android:layout_marginRight="195px"
        android:text="비밀번호 찾기"
        android:textColor="#A6A29D"
        android:textSize="36px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kakaoLogin_login" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="960px"
        android:layout_height="141px"
        android:layout_marginBottom="90px"
        android:background="@drawable/radius_1"
        android:backgroundTint="#F6F6F6"
        android:text="With Me가 처음이신가요?"
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>