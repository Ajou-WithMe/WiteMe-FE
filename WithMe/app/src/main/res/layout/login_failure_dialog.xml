<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="960px"
    android:layout_height="518px"
    android:layout_gravity="center"
    android:background="@drawable/radius_5">

    <TextView
        android:id="@+id/textView12"
        android:layout_width="708px"
        android:layout_height="60px"
        android:layout_marginStart="66px"
        android:layout_marginTop="108px"
        android:text="로그인 정보를 잘못 입력하셨습니다."
        android:textColor="#222222"
        android:textSize="47px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="735px"
        android:layout_height="54px"
        android:layout_marginStart="66px"
        android:layout_marginTop="36px"
        android:text="아이디 혹은 비밀번호를 다시 확인해주세요"
        android:textColor="#222222"
        android:textSize="41px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <Button
        android:id="@+id/understand"
        android:layout_width="798px"
        android:layout_height="141px"
        android:layout_marginTop="75px"
        android:background="@drawable/radius_5_button"
        android:text="확인"
        android:textColor="#333333"
        android:textSize="42px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />




</androidx.constraintlayout.widget.ConstraintLayout>